<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>ラーメン店</title>
</head>
<body>
  <h2>ラーメン店</h2>
  <table>
    <tr><th>ID</th><th>ラーメン店</th><th></th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td>
        
        <td><a href="/ramen/<%= number %>"><%= row.name %></a></td>
        <td><a href="/ramen/delete/<%= number %>"onclick="return confirm('本当に削除しますか？')">削除</a></td>
    </tr>
        <% number += 1 %>
      <% } %>
  </table>
  <a href="/ramen/create">追加</a>
</body>
</html>