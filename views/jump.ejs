<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>ジャンプの連載作品</title>
</head>
<body>
  <h2>ジャンプの連載作品</h2>
  <table>
    <tr><th>ID</th><th>連載作品</th><th></th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td>
        
        <td><a href="/jump/<%= number %>"><%= row.title %></a></td>
        <td><a href="/jump/delete/<%= number %>"onclick="return confirm('本当に削除しますか？')">削除</a></td>
    </tr>
        <% number += 1 %>
      <% } %>
  </table>
  <a href="/jump/create">追加</a>
</body>
</html>